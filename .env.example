# Database Configuration
DATABASE_URL="postgresql://user:password@localhost:5432/beartracks"

# Authentication
NEXTAUTH_SECRET="your-super-secret-key-here"
NEXTAUTH_URL="http://localhost:3000"

# Campus SSO (optional)
SAML_ISSUER="https://your-university.edu/sso"
SAML_CALLBACK_URL="http://localhost:3000/api/auth/saml/callback"

# File Storage (AWS S3)
AWS_ACCESS_KEY_ID="your-aws-access-key"
AWS_SECRET_ACCESS_KEY="your-aws-secret-key"
AWS_S3_BUCKET="beartracks-photos"
AWS_REGION="us-west-1"

# AI/ML Services (optional)
OPENAI_API_KEY="sk-your-openai-api-key"
HUGGINGFACE_API_KEY="hf_your-huggingface-key"

# Email Service (for notifications)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_USER="your-email@gmail.com"
SMTP_PASS="your-app-password"

# Application Settings
APP_NAME="BearTracks.Nice"
APP_URL="https://beartracks.your-university.edu"
SUPPORT_EMAIL="support@your-university.edu"

# Feature Flags
ENABLE_AI_MATCHING="true"
ENABLE_PUSH_NOTIFICATIONS="true"
ENABLE_ANALYTICS="true"

# Development
NODE_ENV="development"
LOG_LEVEL="debug"